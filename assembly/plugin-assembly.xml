<assembly>
    <id>package</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.basedir}/../teamcity-plugin.xml</source>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.basedir}/../Third-Parties-Usage.html</source>
        </file>
        <file>
            <source>target/teamcity-artifactory-plugin-agent-${project.version}.zip</source>
            <outputDirectory>agent</outputDirectory>
        </file>
    </files>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>${project.groupId}:${project.parent.artifactId}-agent</include>
                <include>${project.groupId}:${project.parent.artifactId}-common</include>
                <include>${project.groupId}:${project.parent.artifactId}-common</include>
            </includes>
            <binaries>
                <outputDirectory>server</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <includes>
                            <include>*</include>
                        </includes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
