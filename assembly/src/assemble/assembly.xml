<assembly>
    <id>package</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../agent/target</directory>
            <outputDirectory>agent</outputDirectory>
            <includes>
                <include>*agent*.zip</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/../teamcity-plugin.xml</source>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.basedir}/../Third-Parties-Usage.html</source>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <scope>runtime</scope>
            <outputDirectory>server</outputDirectory>
            <excludes>
                <exclude>*agent*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>