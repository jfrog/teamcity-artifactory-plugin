<teamcity-plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:shemas-jetbrains-com:teamcity-plugin-v1-xml">
    <info>
        <name>artifactory</name>
        <display-name>Artifactory</display-name>
        <version>${plugin.version}</version>
        <description>
            <![CDATA[Provides seamless integration between Artifactory and TeamCity to support fully traceable and reproducible build artifacts management.]]>
        </description>
        <download-url>http://repo.jfrog.org/artifactory/libs-releases-local/org/jfrog/teamcity/teamcity-artifactory-plugin/${plugin.version}/teamcity-artifactory-plugin-${plugin.version}.zip</download-url>
        <email>teamcity@jfrog.org</email>
        <vendor>
            <name>JFrog Ltd.</name>
            <url>http://wiki.jfrog.org/confluence/display/RTF/TeamCity+Artifactory+Plug-in</url>
            <logo>http://www.jfrog.org/images/logos/jfrog.logo.teamcity.png</logo>
        </vendor>
    </info>
    <deployment use-separate-classloader="true"/>
</teamcity-plugin>